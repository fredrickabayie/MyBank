<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginBottom="20sp"
    android:layout_width="match_parent"
    android:layout_marginTop="30sp"
    android:layout_height="88sp">

    <TextView
        android:id="@+id/list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="amount"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/list_account_type"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/list_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="account type"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_account_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="account number"
        android:textStyle="bold"
        android:layout_below="@+id/list_account_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="branch"
        android:textStyle="bold"
        android:layout_below="@+id/list_account_no"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="period"
        android:textStyle="bold"
        android:layout_below="@+id/list_branch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>