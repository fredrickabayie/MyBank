<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="balance"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/list_transaction_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/list_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="transaction date"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="description"
        android:textStyle="bold"
        android:layout_below="@+id/list_transaction_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/list_debit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:typeface="monospace"
        android:textSize="16sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="debit"
        android:textStyle="bold"
        android:layout_below="@+id/list_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>